<ContentDialog
    x:Class="Indirect.Controls.TwoFactorAuthDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Indirect.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Two-factor authentication required"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    Opened="TwoFactorAuthDialog_OnOpened"
    PrimaryButtonClick="ConfirmSecurityCode"
    PrimaryButtonText="Confirm"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock MaxWidth="400" TextWrapping="Wrap">
            <Span>Enter the 6-digit code generated by your authentication app or from your SMS.</Span>
            <Span>
                <Run Text="If you're unable to receive a security code from your authentication app, you can use one of your " /><Hyperlink NavigateUri="https://help.instagram.com/1006568999411025">backup codes</Hyperlink><Run Text="." />
            </Span>
        </TextBlock>
        <TextBox
            x:Name="CodeBox"
            Width="150"
            Margin="0,16,0,4"
            HorizontalAlignment="Left"
            MaxLength="8"
            PlaceholderText="Security code"
            TextChanging="CodeBox_OnTextChanging" />
        <TextBlock
            x:Name="ErrorMessage"
            MaxWidth="400"
            Foreground="Firebrick"
            TextWrapping="Wrap" />
    </StackPanel>
</ContentDialog>
