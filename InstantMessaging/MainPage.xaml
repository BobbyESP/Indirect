<Page
    x:Class="InstantMessaging.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:InstantMessaging"
    xmlns:converters="using:InstantMessaging.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:InstaSharper.Classes.Models"
    xmlns:wrapper="using:InstantMessaging.Wrapper"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:FromMeBoolToAlignmentConverter x:Key="FromMe_AlignmentConverter"/>
        <converters:FromMeBoolToBrushConverter x:Key="FromMe_BrushConverter"/>

        <DataTemplate x:Key="ItemContainer" x:DataType="models:InstaDirectInboxItem">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="{x:Bind FromMe, Mode=OneTime, Converter={StaticResource FromMe_AlignmentConverter}}"
                        Margin="0,2,0,2">
                <Border Background="{x:Bind FromMe, Mode=OneTime, Converter={StaticResource FromMe_BrushConverter}}" HorizontalAlignment="Left" CornerRadius="4,4,4,4">
                    <TextBlock x:Name="MessageContent" 
                               Text="{x:Bind Text}"
                               Margin="6" 
                               MaxWidth="250"
                               HorizontalAlignment="Center" 
                               TextWrapping="WrapWholeWords"/>
                </Border>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <controls:MasterDetailsView BackButtonBehavior="Automatic"
                                    ItemsSource="{x:Bind ViewModel.InboxThreads, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedThread, Mode=TwoWay}"
                                    NoSelectionContent="Select a conversation to view"
                                    BorderBrush="Transparent"
                                    MasterPaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}"
                                    SelectionChanged="MessageContent_SelectionChanged">
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate x:DataType="wrapper:InstaDirectInboxThreadWrapper">
                    <StackPanel>
                        <TextBlock Text="{x:Bind Users[0].UserName}" FontWeight="Bold" MaxLines="1" HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                        <TextBlock Text="{x:Bind LastPermanentItem.Text}" TextTrimming="WordEllipsis" MaxLines="1" HorizontalAlignment="Left" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>

            <controls:MasterDetailsView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel VerticalAlignment="Top"
                                     ItemsUpdatingScrollMode="KeepItemsInView"/>
                </ItemsPanelTemplate>
            </controls:MasterDetailsView.ItemsPanel>

            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate x:DataType="wrapper:InstaDirectInboxThreadWrapper">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <ListView Grid.Row="0" 
                                  ItemsSource="{x:Bind ObservableItems}"
                                  ItemTemplate="{StaticResource ItemContainer}"
                                  SelectionMode="None">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel VerticalAlignment="Bottom"
                                                     ItemsUpdatingScrollMode="KeepLastItemInView"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MessageTextBox" 
                                 PlaceholderText="Enter messeage" 
                                 MinWidth="100" 
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="4,0,4,0" MaxLength="2200" KeyDown="MessageTextBox_KeyDown"/>
                            <Button x:Name="SendButton" Content="Send" Margin="4" Grid.Column="1" Click="SendButton_Click"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
        </controls:MasterDetailsView>
    </Grid>
</Page>
